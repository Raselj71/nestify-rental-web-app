generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    firsName String
    lastName String
    password String
    dob DateTime
    address String
    postCode Int
    city String

    userRole role @default(USER)

     


}

enum role{
  USER
  ADMIN

}



